<% if widget.real_column_count == 1 %>
  <%= render partial: 'multi_column_widget/one_column', locals: {widget: widget} %>
<% elsif widget.real_column_count == 2 %>
  <%= render partial: 'multi_column_widget/two_column', locals: {widget: widget} %>
<% elsif widget.real_column_count == 3 %>
  <%= render partial: 'multi_column_widget/three_column', locals: {widget: widget} %>
<% else %>
  <%= render partial: 'multi_column_widget/four_column', locals: {widget: widget} %>
<% end %>

