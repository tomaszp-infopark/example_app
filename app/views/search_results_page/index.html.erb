<div class="row">
  <% if @search_results.present? %>
    <%= content_tag :h1, "Search results for \"#{params[:q]}\"" %>

    <ul class="list-unstyled">
      <% @search_results.each do |result_obj| %>
        <li>
          <h3>
            <%= link_to sanitize(result_obj.menu_title), scrivito_path(result_obj) %>
          </h3>

          <%= content_tag :p, search_result_text(result_obj, params[:q]) %>
        </li>
        <hr/>
      <% end %>
    </ul>
  <% else %>
    <%= content_tag :h1, "No results for \"#{params[:q]}\"" %>
  <% end %>
</div>
